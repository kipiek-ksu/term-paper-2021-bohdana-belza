			}
		}

		$form['x'] = array (
			'#type' => 'item',
			'#title' => t('Only chief editor may assign/change issue of this article.'
		),);

	} else { //article is being edited by author   
		$form['nid_issue'] = array (
			'#type' => 'hidden',
			'#value' => $node->nid_issue ? $node->nid_issue : ($article->iid ? $article->iid : '-1'
		)); //working
	}
	return $form;
}

